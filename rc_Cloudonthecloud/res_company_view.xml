<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
         <record id="x_url_domain_company" model="ir.ui.view">
            <field name="name">res.company.url.domain</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='account_grp']" position="after">
                    <group name="url_domain_grp" string="Url_domain">
                        <field name="x_url_domain" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
